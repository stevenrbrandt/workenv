#!/usr/bin/env python3
from subprocess import call
import sys
import socket
from time import time
host = socket.gethostname()
r = -1
try:
    t1 = time()
    r = call(sys.argv[1:])
finally:
    t2 = time()
    secs = t2 - t1
    msg = host+": "+" ".join(sys.argv[1:])+" => "+str(r)+(" in %.2f secs" % secs)
    if secs > 60:
        call(["telegram-send",msg])
