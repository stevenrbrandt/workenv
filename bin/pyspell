if pres.set != "" and pres.code != "":
    manual(pres.set[0], int(pres.code[0]))

if pres.ascii_db:
    with open("ascii-db.txt","w") as fd:
        cursor.execute("SELECT word FROM words WHERE code >= 200 AND code < 300 ORDER BY word")
